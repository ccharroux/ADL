<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <compilation debug="true" targetFramework="4.5.2"/>
    <httpRuntime targetFramework="4.5.2"/>

  </system.web>
  <system.codedom>
  </system.codedom>
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false"/>    
    <rewrite>
      <outboundRules rewriteBeforeCache="false">
        <rule name="set pragma" enabled="true">
          <match serverVariable="RESPONSE_Pragma" pattern=".*"  />
          <conditions>
            <add input="{REQUEST_URI}" pattern="\.(aspx|html)$"  ignoreCase="true" />
          </conditions>
          <action type="Rewrite" value="no-cache"/>
        </rule>
        <rule name="set expires" enabled="true">
          <match serverVariable="RESPONSE_Expires" pattern=".*"  />
          <conditions>
            <add input="{REQUEST_URI}" pattern="\.(aspx|html)$"  ignoreCase="true" />
          </conditions>
          <action type="Rewrite" value="0"/>
        </rule>
        <rule name="set cache control" enabled="true">
          <match serverVariable="RESPONSE_Cache_Control" pattern=".*"/>
          <conditions>
            <add input="{REQUEST_URI}" pattern="\.(aspx|html)$"  ignoreCase="true" />
          </conditions>
          <action type="Rewrite" value="no-cache, no-store"/>
        </rule>
        <rule name="Remove Server header" enabled="true">
          <match serverVariable="RESPONSE_Server" pattern=".*"/>
          <conditions>
            <add input="{HTTPS}" pattern="on" ignoreCase="true"/>
          </conditions>
          <action type="Rewrite" value=""/>
        </rule>
        <rule name="Add Strict-Transport-Security when HTTPS" enabled="true">
          <match serverVariable="RESPONSE_Strict_Transport_Security" pattern=".*"/>
          <conditions>
            <add input="{HTTPS}" pattern="on" ignoreCase="true"/>
          </conditions>
          <action type="Rewrite" value="max-age=31536000; includeSubDomains; preload"/>
        </rule>
      </outboundRules>
      <rules>
        <rule name="HTTP to HTTPS redirect" stopProcessing="true">
          <match url="(.*)"/>
          <conditions>
            <add input="{HTTP_HOST}" pattern="localhost" negate="true"/>
            <add input="{HTTPS}" pattern="off" ignoreCase="true"/>
          </conditions>
          <action type="Redirect" redirectType="Found" url="https://{HTTP_HOST}/{R:1}"/>
        </rule> 
        <!--<rule name="HTTP to HTTPS redirect (localhost)" stopProcessing="true">
          <match url="(.*)"/>
          <conditions>
            <add input="{HTTP_HOST}" pattern="localhost"/>
            <add input="{HTTPS}" pattern="off" ignoreCase="true"/>
          </conditions>
          <action type="Redirect" redirectType="Found" url="http://localhost:51116/{R:1}"/>
        </rule>-->
      </rules> 
    </rewrite>
    <httpProtocol>
      <customHeaders>
        <add name="X-Frame-Options" value="SAMEORIGIN"/>
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains; preload"/>
        <remove name="Server"/>
        <remove name="X-Powered-By"/>
      </customHeaders>
    </httpProtocol>    
  </system.webServer>
</configuration>